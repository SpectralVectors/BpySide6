QDialog {
    background-image: url(:/images/bg.png);
    border-radius: 5px;
}

/* Sliders */
QSlider::handle:horizontal#location_x {
    background: red;
    border-radius: 5px;
}

QSlider::handle:horizontal#location_y {
    background: lightgreen;
    border-radius: 5px;
}

QSlider::handle:horizontal#location_z {
    background: lightblue;
    border-radius: 5px;
}

QSlider::handle:vertical#scale_x {
    background: red;
    border-radius: 5px;
}

QSlider::handle:vertical#scale_y {
    background: lightgreen;
    border-radius: 5px;
}

QSlider::handle:vertical#scale_z {
    background: lightblue;
    border-radius: 5px;
}

/* Dials */
QDial#rotation_x {
    background: red;
}

QDial#rotation_y {
    background: lightgreen;
}

QDial#rotation_z {
    background: lightblue;
}

QCheckBox {
    color: white;
    font: 12pt "Verdana";
}

/* Labels */
QLabel#title {
    color: white;
    font: bold 16pt "Verdana";
}

QLabel {
    color: white;
    font: 10pt "Verdana";
}

QLabel#settings_label {
    color: white;
    font: bold 14pt "Verdana";
}

QLabel#location_label {
    color: white;
    font: 12pt "Verdana";
}

QLabel#rotation_label {
    color: white;
    font: 12pt "Verdana";
}

QLabel#scale_label {
    color: white;
    font: 12pt "Verdana";
}

QLabel#logo {
    image: url(:/images/logo.png);
    width: 24px;
    height: 24px;
    max-width: 24px;
    max-height: 24px;    
}

/* Buttons */
QPushButton#home {
    border-radius: 5px;
    border: 1px solid gray;
    color: white;
    width: 48px;
    height: 48px;
    max-width: 48px;
    max-height: 48px;
    min-width: 48px;
    min-height: 48px;
}

QPushButton#settings {
    border-radius: 5px;
    border: 1px solid gray;
    color: white;
    width: 48px;
    height: 48px;
    max-width: 48px;
    max-height: 48px;
    min-width: 48px;
    min-height: 48px;
}

QPushButton#docs {
    border-radius: 5px;
    border: 1px solid gray;
    color: white;
    width: 48px;
    height: 48px;
    max-width: 48px;
    max-height: 48px;
    min-width: 48px;
